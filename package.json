{
  "name": "js-sass-sandbox",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "directories": {},
  "scripts": {
    "test": "jest --watch",
    "dev":
      "NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.js --mode development",
    "server": "NODE_ENV=production nodemon ./src/server/index.js",
    "ssr:watch": "NODE_ENV=production npx nodemon ./server.js",
    "ssr": "NODE_ENV=production node ./server.js",
    "ssr2": "node ./server.js",
    "build:client":
      "find dist -type f -not -name 'main.css' -not -name 'server.js' -print0 | xargs -0 rm -- && NODE_ENV=production webpack --config ./webpack/webpack.config.js --mode production",
    "build:server":
      "NODE_ENV=production webpack --config ./webpack/webpack.config.server.js --mode production",
    "server:prod": "NODE_ENV=production node dist/server.js",
    "prod:build:run":
      "npm run build:client && npm run build:server && npm run server:prod"
  },
  "author": "Thomas Hibbard <loren.hibbard@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomashibbard/js-sass-sandbox.git"
  },
  "devDependencies": {
    "autoprefixer": "8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "22.4.3",
    "mini-css-extract-plugin": "0.4.0",
    "node-sass": "^4.8.3",
    "postcss-loader": "^2.1.3",
    "pug-loader": "2.4.0",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "4.5.0",
